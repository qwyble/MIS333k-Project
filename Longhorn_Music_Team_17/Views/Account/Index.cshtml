@model Longhorn_Music_Team_17.Models.IndexViewModel
@{
    ViewBag.Title = "Account Details";
}
<h2>@ViewBag.Title.</h2>
<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>First Name:</dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>Last Name:</dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>Email:</dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>Phone:</dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber, "{0:###-##-####}")
        </dd>
        <dt>Address:</dt>
        <dd>
            @Html.DisplayFor(model => model.StreetAddress)
        </dd>
        <dt>ZipCode:</dt>
        <dd>
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>
        <dt>Credit Cards:</dt>
        <dd>
            @if (@ViewBag.CardInfo != null)
            {
                <i>@ViewBag.CardInfo[0]</i> @:  ************@ViewBag.CardInfo[1]
            }
        </dd>
        <dd>
            @if (ViewBag.CardInfo.Count > 2)
            {
            <i>@ViewBag.CardInfo[2]</i> @:  ************@ViewBag.CardInfo[3]
            }
    </dd>
    <dd>
        [
        @Html.ActionLink("Add/Remove", "CardEdit")
        ]
    </dd>
    <dt>@Html.ActionLink("Edit", "Edit")</dt>
</dl>
</div>
