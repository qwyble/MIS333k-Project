
@{
    ViewBag.Title = "Index";
}

<h1>Welcome to Longhorn Music</h1>
<h3>Get Hooked!</h3>

@using (Html.BeginForm("Search", "Search"))
{
    <p class="form-group">
        @Html.TextBox("SearchString", null, new { @class = "form-control", Placeholder = "Search" }) <br />
        <ng-form class="form-inline">
            <input type="submit" name="btn1" value="Songs" class="btn btn-default" />
            <input type="submit" name="btn1" value="Artists" class="btn btn-default" />
            <input type="submit" name="btn1" value="Albums" class="btn btn-default" />
        </ng-form><br /><br />
    </p>                <!––submit buttons for different search types-->
}