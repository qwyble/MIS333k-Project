@model IEnumerable<Longhorn_Music_Team_17.Models.Song>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SongTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Artists)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ratings)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SongPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.ActionLink(item.SongTitle, "Details", "Songs", new { id = item.SongID }, null)
        </td>

        <td>
            @foreach (var artist in item.Artists)
                {
                @Html.DisplayFor(modelitem => artist.ArtistName)  if (item.Artists.IndexOf(artist) < item.Artists.Count - 1)
                    {
                    <span> &amp;</span> <br />
                }
            }
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Ratings.FirstOrDefault().RatingScore)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.DiscountedPrice)
        </td>

        @* <td>
                @Html.DisplayFor(modelItem => item.FeaturedSong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genres.FirstOrDefault().GenreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Albums.FirstOrDefault().AlbumTitle)
            </td> *@

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.SongID }) |
            @Html.ActionLink("Details", "Details", new { id = item.SongID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.SongID })

        </td>
    </tr>
}

</table>
