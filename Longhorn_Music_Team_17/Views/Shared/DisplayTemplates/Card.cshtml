@model IEnumerable<Longhorn_Music_Team_17.Models.Card>
<table class="table">

    <tr>
        <th>
            Card Number
        </th>
        <th>
            Card Type
        </th>
        <th>
            Expiration Date
        </th>
        <th>
            CVV
        </th>
        <th>

        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CVV)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteCard", "Account", new { id = item.CardID }, null)
            </td>
        </tr>
    }
</table>
